<p id="notice"><%= notice %></p>


<h1>Addresses for <%= @person.display_name %>
</h1>

<table>
  <thead>
    <tr>
      <th>Street</th>
      <th>Town</th>
      <th>Zip</th>
      <th>State</th>
      <th>Country</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street %></td>
        <td><%= address.town %></td>
        <td><%= address.zip %></td>
        <td><%= address.state %></td>
        <td><%= address.country %></td>
        <td><%= address.person_id %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Add new address to #{@person.display_name}", new_person_address_path(@person) %>

<br>
