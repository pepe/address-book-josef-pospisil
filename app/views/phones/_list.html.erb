<% if phones.present?%>
<table class="table">
  <thead>
    <tr>
      <th>Number</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% phones.each do |phone| %>
      <tr>
        <td><%= phone.number %></td>
        <td><%= phone.comment %></td>
        <td><%= link_to 'Show', phone %></td>
        <td><%= link_to 'Edit', edit_phone_path(phone) %></td>
        <td><%= link_to 'Destroy', phone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<table><thead><tr><th>No phones yet</th></tr></thead></table>
<% end %>